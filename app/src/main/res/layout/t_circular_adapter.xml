<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical" android:background="@color/listBag">
    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       app:cardCornerRadius="10dp"
                                       android:layout_marginTop="10dp"
                                       app:cardElevation="2dp"
                                       android:layout_marginLeft="11dp"
                                       android:layout_marginRight="11dp" android:layout_marginBottom="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@android:color/transparent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center"
                    android:background="@android:color/transparent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/admin_name"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Admin" android:textSize="17sp"
                        android:gravity="left"
                        android:textColor="@color/colorAccent" android:layout_margin="5dp"/>
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp" app:srcCompat="@drawable/ic_more"
                        android:id="@+id/more" android:layout_gravity="right|center_vertical"
                        android:layout_margin="8dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light" android:layout_marginTop="0dp"
                    android:layout_marginBottom="8dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/teacher_circular_holder_withoutimg"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp" android:paddingLeft="10dp"
                        android:textSize="17sp" android:layout_marginBottom="0dp" android:layout_margin="0dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/id_teachermsg" android:layout_weight="1"
                            android:textSize="1sp" android:layout_gravity="bottom"/>
                    <TextView
                            android:text="Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/date_circular_holder_withoutimg"
                            android:layout_marginLeft="0dp" android:layout_marginRight="10dp"
                            android:layout_marginBottom="0dp" android:textSize="14sp"
                            android:layout_weight="1" android:layout_gravity="right" android:textStyle="bold"
                            android:gravity="right"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>