<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical"
              android:background="@color/listBag">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp" android:layout_margin="6dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_margin="5dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/pDate" android:layout_gravity="right"
                    android:layout_marginRight="8dp" android:text="Date" android:textSize="15sp"
                    android:textStyle="bold"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Name        :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView8"
                        android:layout_marginTop="8dp" android:layout_marginLeft="8dp" android:textStyle="bold"
                        android:textSize="16sp"/>
                <TextView
                        android:text="Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/pName" android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp" android:layout_marginTop="8dp" android:textSize="16sp"
                        android:textColor="@color/colorAccent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Email         :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView9"
                        android:layout_marginTop="4dp" android:layout_marginLeft="8dp" android:textStyle="bold"
                        android:textSize="16sp"/>
                <TextView
                        android:text="Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/pEmail" android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp" android:layout_marginTop="4dp" android:textSize="16sp"
                        android:textColor="@color/colorAccent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Phone no  :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView10"
                        android:layout_marginLeft="8dp" android:layout_marginTop="4dp" android:textStyle="bold"
                        android:textSize="16sp"/>
                <TextView
                        android:text="Phone no."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/pPhn" android:layout_marginTop="4dp"
                        android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:textSize="16sp"
                        android:textColor="@color/colorAccent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView11"
                        android:layout_marginTop="4dp" android:layout_marginLeft="8dp" android:text="Address    :"
                        android:textStyle="bold" android:textSize="16sp"/>
                <TextView
                        android:text="Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/pAdd" android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp" android:layout_marginTop="4dp" android:textSize="16sp"
                        android:textColor="@color/colorAccent"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>