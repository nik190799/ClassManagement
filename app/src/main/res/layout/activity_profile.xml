<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Profile" android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:background="@color/listBag">


    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       app:cardCornerRadius="13dp"
                                       app:cardElevation="8dp"
                                       android:layout_marginTop="10dp"
                                       android:layout_marginLeft="11dp"
                                       android:layout_marginRight="11dp" app:cardBackgroundColor="@color/cardback">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="left" android:layout_margin="8dp">
                <TextView
                        android:text="Name:"
                        android:layout_height="wrap_content" android:id="@+id/textView20" android:layout_weight="0"
                        android:textStyle="bold" android:textSize="18sp" android:layout_width="100dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/profile_name" android:layout_weight="1"
                        android:textStyle="bold" android:textColor="@android:color/background_light"
                        android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_margin="8dp">
                <TextView
                        android:text="Branch:"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" android:id="@+id/textView19" android:layout_weight="0"
                        android:textStyle="bold" android:textSize="18sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/branch_text" android:layout_weight="0"
                        android:textStyle="bold" android:textColor="@android:color/background_light"
                        android:textSize="18sp" android:text="Satara"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_margin="8dp">
                <TextView
                        android:text="Id:"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" android:id="@+id/textView18" android:layout_weight="0"
                        android:textStyle="bold" android:textSize="18sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/student_id_text" android:layout_weight="0"
                        android:textStyle="bold" android:textColor="@android:color/background_light"
                        android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_margin="8dp">
                <TextView
                        android:text="Batch:"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" android:id="@+id/textView21" android:layout_weight="0"
                        android:textStyle="bold" android:textSize="18sp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/profile_batch" android:layout_weight="1"
                        android:textStyle="bold" android:textColor="@android:color/background_light"
                        android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
        >

    </androidx.cardview.widget.CardView>
</LinearLayout>