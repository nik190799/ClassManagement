<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminLogin"
        android:orientation="vertical"
        android:background="@color/listBag">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="270dp"
            android:layout_height="wrap_content" android:gravity="center"
            android:background="@drawable/rounded_button_main_menu" android:layout_marginTop="90dp"
            android:layout_gravity="center"
            android:elevation="8dp">
        <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp" app:srcCompat="@drawable/jk_logo" android:id="@+id/imageView2"
                android:layout_marginBottom="60dp" android:layout_marginTop="12dp"/>
        <EditText
                android:layout_width="230dp"
                android:layout_height="48dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/admin_id"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:hint="Admin_id"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorLink="@android:color/black"
                android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
        <EditText
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/admin_password"
                android:textColorHint="@android:color/darker_gray" android:hint="Password"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:layout_marginTop="32dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
        />
        <Button
                android:text="Login"
                android:layout_width="130dp"
                android:layout_height="49dp"
                android:id="@+id/admin_login_button" android:layout_marginTop="55dp"
                android:background="@drawable/btn_background" android:textColor="#ffff"
                android:layout_marginBottom="12dp"/>
    </LinearLayout>

</LinearLayout>