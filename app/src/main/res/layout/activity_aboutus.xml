<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        tools:context=".AboutUs" android:orientation="vertical" android:gravity="center" android:background="#ffff">


    <ImageView
            android:layout_width="220dp"

            android:layout_height="150dp" app:srcCompat="@drawable/jklogo" android:id="@+id/imageView7"
            android:scaleType="fitCenter"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="200dp"
            android:background="@drawable/btn_background" android:padding="8dp"
            android:layout_margin="13dp" android:gravity="center"
            android:elevation="8dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary" android:gravity="center"
                android:layout_gravity="center" android:layout_margin="5dp">
            <TextView
                    android:text="App Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView23" android:textSize="18sp"
                    android:layout_weight="1" android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textStyle="bold"/>
            <TextView
                    android:text="JK Academy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView25" android:layout_weight="0"
                    android:textSize="18sp" android:textColor="#ffff"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="center" android:gravity="center"
                android:layout_margin="5dp">
            <TextView
                    android:text="App Version "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView26" android:layout_weight="1"
                    android:textSize="18sp" android:textColor="#ffff" android:textStyle="bold"/>
            <TextView
                    android:text="1.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView27" android:layout_weight="0"
                    android:textSize="18sp" android:textColor="#ffff"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="5dp">
            <TextView
                    android:text="Company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView28" android:layout_weight="1"
                    android:textSize="18sp" android:textColor="#ffff" android:textStyle="bold"/>
            <TextView
                    android:text="Creed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView29" android:layout_weight="0"
                    android:textSize="18sp" android:textColor="#ffff"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="5dp">
            <TextView
                    android:text="E-mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView30" android:layout_weight="1"
                    android:textSize="18sp" android:textColor="#ffff" android:textStyle="bold"/>
            <TextView
                    android:text="softcreedservices@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView31" android:layout_weight="0"
                    android:textColor="#ffff"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="5dp">
            <TextView
                    android:text="Active Functions "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView32" android:layout_marginTop="50dp"
                    android:textSize="18sp" android:textColor="#ffff" android:textStyle="bold"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_gravity="center" android:gravity="center">
                <TextView
                        android:text="Circulars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView33" android:textSize="16sp"
                        android:textColor="#ffff"/>
                <TextView
                        android:text="Homework"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView35" android:textSize="16sp"
                        android:textColor="#ffff"/>
                <TextView
                        android:text="Attendance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView53" android:gravity="center"
                        android:textSize="16sp" android:textColor="@android:color/background_light"/>
                <TextView
                        android:text="Public Login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView36" android:textSize="16sp"
                        android:textColor="#ffff"/>
                <TextView
                        android:text="Parent Payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView34" android:textSize="16sp"
                        android:textColor="#ffff"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>