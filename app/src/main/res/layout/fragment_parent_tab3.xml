<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/constraintLayout"
              android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
              android:gravity="center_horizontal">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp" android:id="@+id/homework_btn"
                    app:cardCornerRadius="5dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp" android:layout_margin="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="151dp" android:background="@drawable/sh_homework">
                    <TextView
                            android:text="Homework"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView54"
                            android:layout_margin="10dp"
                            android:textSize="18sp" android:textStyle="bold"
                            android:textColor="@android:color/background_light"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp" android:id="@+id/parent_payment_btn"
                    app:cardCornerRadius="5dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            >
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:background="@drawable/payment_img"
                        android:layout_gravity="right"
                        android:layout_marginRight="0dp"
                        android:layout_marginEnd="0dp" android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp">
                    <TextView
                            android:text="Payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView55"
                            android:layout_margin="10dp"
                            android:textSize="18sp" android:textStyle="bold"
                            android:textColor="@android:color/background_light"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginTop="10dp">
                <TextView
                        android:text="Date"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" android:id="@+id/fragment_date" android:textSize="16sp"
                        android:textStyle="bold" android:gravity="center"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>