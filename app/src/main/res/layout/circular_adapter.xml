<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical" android:background="@color/listBag">
    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       app:cardCornerRadius="10dp"
                                       app:cardElevation="2dp"
                                       android:layout_marginTop="10dp"
                                       android:layout_marginLeft="11dp"
                                       android:layout_marginRight="11dp" android:layout_marginBottom="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="0">
                <TextView
                        android:text="Admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView38" android:layout_weight="1"
                        android:textStyle="bold"
                        android:textSize="17sp" android:textColor="@color/colorAccent"
                        android:layout_marginLeft="13dp"/>
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp" app:srcCompat="@drawable/ic_more"
                        android:id="@+id/more" android:layout_weight="0" android:layout_margin="5dp"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/homework_holder_recyclerview"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" android:paddingLeft="10dp"
                    android:textSize="17sp" android:layout_marginBottom="8dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="0">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/postId" android:layout_weight="1"
                        android:textSize="1sp"/>
                <TextView
                        android:text="Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_homeworkhold"
                        android:textSize="14sp"
                        android:layout_weight="1" android:layout_gravity="right" android:textStyle="bold"
                        android:gravity="right" android:layout_margin="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>