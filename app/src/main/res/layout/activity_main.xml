<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/background_light"
        android:orientation="vertical" android:gravity="center">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:id="@+id/textView2" android:text="Class member:"
                android:textColor="@android:color/black" android:layout_margin="10dp" android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <Button
                android:text="ADMIN"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:id="@+id/admin_button"
                android:background="@drawable/btn_background"
                android:textStyle="bold" android:layout_margin="10dp" android:textColor="#ffff"/>
        <Button
                android:text="Teacher"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:id="@+id/teacher_button"

                android:background="@drawable/btn_background"
                android:textStyle="bold" android:layout_margin="10dp" android:textColor="#ffff"/>
        <Button
                android:text="Parent"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:id="@+id/parent_button"
                android:background="@drawable/btn_background"
                android:textStyle="bold" android:layout_margin="10dp" android:textColor="#ffff"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView
                android:text="New to class:"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:id="@+id/textView3"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textSize="15sp"
                android:layout_margin="10dp" android:textStyle="bold"/>
    </LinearLayout>
    <Button
            android:text="Public"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:id="@+id/public_button"
            android:background="@drawable/btn_background"
            android:textStyle="bold" android:layout_margin="10dp" android:textColor="#ffff"/>
    <TextView
            android:text="Here public login is for other than class members, Class info is given there"
            android:layout_width="323dp"
            android:layout_height="58dp"
            android:id="@+id/textView5"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp" android:textSize="14sp" android:gravity="center"/>
</LinearLayout>