<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center" android:orientation="vertical">

    <TextView
            android:id="@+id/textView1"
            android:layout_width="368dp"
            android:layout_height="wrap_content"

            android:focusableInTouchMode="false"
            android:forceHasOverlappingRendering="true"
            android:gravity="center"
            android:padding="6dp"
            android:text="Welcome Admin"
            android:textColor="#0C0000"
            android:textSize="27sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.056"
            tools:fontFeatureSettings="66"
            tools:layout_editor_absoluteX="8dp" android:layout_gravity="center" android:layout_marginBottom="20dp"
            android:textStyle="bold"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="10dp" android:layout_margin="20dp" android:background="@drawable/rounded_button_grey">


        <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/spinner"
                android:entries="@array/classes"

                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.161"
                tools:layout_editor_absoluteX="8dp" android:layout_margin="20dp"/>

        <Button
                android:id="@+id/create_database_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button1"
                android:onClick="CreateAttendance"
                android:padding="10dp"
                android:text="Create Database"
                android:textAllCaps="false"
                android:textColor="#fff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.626"
                tools:layout_editor_absoluteX="8dp"/>

        <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button1"
                android:onClick="takeAttendanceButton"
                android:text="Take attendance"
                android:textAllCaps="false"
                android:textColor="#fff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.364"
                tools:layout_editor_absoluteX="8dp"/>

        <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button1"
                android:onClick="previous_records"
                android:padding="10dp"
                android:text="Previous records"
                android:textAllCaps="false"
                android:textColor="#fff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.626"
                tools:layout_editor_absoluteX="8dp"/>
    </LinearLayout>

</LinearLayout>
